<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.worker.DoorInitActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/square_pattern"
        android:orientation="vertical"
        android:padding="30dp">


        <ImageButton
            android:id="@+id/open_request"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="262dp"
            android:layout_height="265dp"
            android:layout_centerInParent="true"
            android:background="@drawable/request_in"
            android:contentDescription="@string/door_request"
            android:scaleType="centerCrop"
            android:text="@string/door_request" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>